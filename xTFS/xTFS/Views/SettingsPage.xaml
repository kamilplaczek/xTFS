<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" BindingContext="{Binding Source={StaticResource Locator}, Path=Settings}"
             x:Class="xTFS.Views.SettingsPage">
  <Grid VerticalOptions="Center" Margin="20">
	<Grid.RowDefinitions>
	  <RowDefinition Height="Auto" />
	  <RowDefinition Height="Auto" />
	  <RowDefinition Height="Auto" />
	  <RowDefinition Height="Auto" />
	</Grid.RowDefinitions>
	<Label Text="TFS address" Grid.Row="0"></Label>
	<Entry Text="{Binding Address}" Grid.Row="1"></Entry>
	<Button Text="Save" Command="{Binding SaveCommand}" Grid.Row="2"></Button>
	<Button Text="Cancel" Command="{Binding CancelCommand}"  Grid.Row="3"></Button>
  </Grid>
</ContentPage>